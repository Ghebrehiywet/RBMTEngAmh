
@{
    ViewBag.Title = "Index";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Nouns</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Sentences : ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("sentences", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("sentences", "", new { @class = "text-danger" })
            </div>
        </div>

        @{
            if (ViewBag.ResultDisplay)
            {
                <div class="form-group">
                    @Html.Label("Source Lang Rule : ", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @ViewBag.SourceLanguageRule
                    </div>
                </div>

            }
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Translate" class="btn btn-default" />
            </div>
        </div>
        @{
            if (ViewBag.ResultDisplay)
            {
                <div class="form-group">
                    @Html.Label("Target Lang Rule : ", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @ViewBag.TargetLanguageRule
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">
                        Output Message:
                    </label>

                    <div class="col-md-10">
                        <label class="control-label col-sm-2" style="font-style:italic">
                            <u> @ViewBag.ResultDisplayMessage</u>
                        </label>

                        @*@Html.Editor("sentences", new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessage("sentences", "", new { @class = "text-danger" })*@
                    </div>
                </div>

            }
        }
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
